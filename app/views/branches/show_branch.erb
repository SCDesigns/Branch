<head>
  <link href="<%= url('/style.css') %>" rel="stylesheet" type="text/css" />
</head>


<div class="content">
	<h3><%= @branch.event %></h3>
	<h4><%= @branch.organization %></h4>
	<h4><%= @branch.date %></h4>
	<h4><%= @branch.location %></h4>
	<p><%= @branch.info %></p>

	<br>
		<% if @branch.user == current_user %>
			<form method="post" action="/branches/<%=@branch.id%>/delete">
			  <button id="hidden" class="btn btn-danger" type="hidden" name="_method" value="DELETE">Delete Branch</button>
			</form>
			<br>
			<a href="/branches/<%=@branch.id%>/edit"><button type="button" class="btn btn-warning">Edit Branch</a></button>
		<% end %>
</div>
